{
  "name": "@some-ui/utils",
  "private": true,
  "version": "0.0.0",
  "files": [
    "dist/**"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "index.ts",
  "scripts": {
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "build": "pnpm build:esm && pnpm build:cjs",
    "clean": "rimraf ./dist && rimraf .turbo && rimraf node_modules && rimraf rimraf tsconfig.tsbuildinfo && rimraf .eslintcache",
    "lint": "pnpm --package=turbo@latest -- turbo lint:js typecheck prettier",
    "lint:js": "eslint \"**/*.{js,mjs,ts,tsx}\" --cache",
    "prettier": "prettier \"**/*.{js,mjs,ts,tsx,md,mdx,json,yml,css}\" --check --cache",
    "typecheck": "tsc --noEmit",
    "postinstall": "pnpm build"
  },
  "dependencies": {
    "tailwind-merge": "^2.4.0",
    "clsx": "^2.1.1"
  },
  "devDependencies": {}
}
