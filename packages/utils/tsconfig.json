{
  "extends": "@some-ui/tsconfig/tsconfig.rollup",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "types": ["chrome"]
  },
  "include": ["lib", "index.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
