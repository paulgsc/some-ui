{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["clean", "^build"],
      "outputs": ["../../dist/**", "dist/**", "build/**"],
      "cache": false
    },
    "type-check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "lint:js": {
      "cache": false,
      "outputs": []
    },
    "lint:md": {
      "cache": false,
      "outputs": []
    },
    "prettier": {
      "cache": false
    },
    "typecheck": {},
    "check": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
